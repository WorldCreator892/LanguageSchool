<Window x:Class="LanguageSchoolManagement.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageSchoolManagement"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <StackPanel Background="White">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontStyle="Italic" FontFamily="Times New Roman">
                <Run FontSize="40" FontWeight="Bold" Foreground="Black" >text </Run>
                <LineBreak />
                <Run FontSize="30" FontWeight="DemiBold" Foreground="Black"> text</Run>
                <LineBreak />
            </TextBlock >
            <Button Content="Ok" Click="ButtonOkClick" HorizontalAlignment="Center" FontSize="30" Height="60" Width="60">
        </Button>
        </StackPanel>
    </Grid>
</Window>
