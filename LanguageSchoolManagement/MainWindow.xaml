<Window x:Class="LanguageSchoolManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageSchoolManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontStyle="Italic" FontFamily="Times New Roman">
                <Run FontSize="20" FontWeight="Bold" Foreground="Black" > Choice Language </Run>
                <LineBreak />
            </TextBlock >
            <ComboBox x:Name="ChoiceLanguage"  Height="30" Width="400"  VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock>English</TextBlock>
                <TextBlock>French</TextBlock>
                <TextBlock>German</TextBlock>
                <TextBlock>Chinese</TextBlock>
            </ComboBox>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontStyle="Italic" FontFamily="Times New Roman">
                <Run FontSize="20" FontWeight="Bold" Foreground="Black" > Choice Level </Run>
                <LineBreak />
            </TextBlock >
            <ComboBox x:Name="ChoiceLevel" Height="30" Width="400"  VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock>Advanced</TextBlock>
                <TextBlock>Intermediate</TextBlock>
                <TextBlock>Elementary</TextBlock>
            </ComboBox>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontStyle="Italic" FontFamily="Times New Roman">
                <Run FontSize="20" FontWeight="Bold" Foreground="Black" > Choice Intensity </Run>
                <LineBreak />
            </TextBlock >
            <ComboBox x:Name="ChoiceIntensity" Height="30" Width="400"  VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock>Intensive</TextBlock>
                <TextBlock>Regular</TextBlock>
                <TextBlock>Supportive</TextBlock>
            </ComboBox>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontStyle="Italic" FontFamily="Times New Roman">
                <Run FontSize="20" FontWeight="Bold" Foreground="Black" > Choice Type </Run>
                <LineBreak />
            </TextBlock >
            <ComboBox x:Name="ChoiceType" Height="30" Width="400"  VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock>Individual</TextBlock>
                <TextBlock>Group</TextBlock>
            </ComboBox>
            <StackPanel>
                <Button Content="See result" Height="30" Width="100" Click="ButtonClickInfo" Margin="10" />
                <Button Content="Add new person" Height="30" Width="50" Click="ButtonClickAdd" Margin="10" />
            </StackPanel>
        </StackPanel>
        <Button Click="ButtonRulesClick" HorizontalAlignment="Left" FontSize="30" Height="60" Width="60">
            <StackPanel>
                <Image Source="menu.png" />
                <TextBlock Text="Menu" />
            </StackPanel>
        </Button>

    </Grid>
</Window>
