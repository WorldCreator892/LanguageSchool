<Window x:Class="LanguageSchoolManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageSchoolManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Background="#FFA0C2FF" Margin="1,0,0,-46" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.209"/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontStyle="Italic" FontFamily="Times New Roman">
                <Run FontSize="20" FontWeight="Bold" Foreground="Black" > Choice Language </Run>
                <LineBreak />
            </TextBlock >
            <ComboBox x:Name="ChoiceLanguage"  Height="30" Width="400"  VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock>English</TextBlock>
                <TextBlock>French</TextBlock>
                <TextBlock>German</TextBlock>
                <TextBlock>Chinese</TextBlock>
            </ComboBox>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontStyle="Italic" FontFamily="Times New Roman">
                <Run FontSize="20" FontWeight="Bold" Foreground="Black" > Choice Level </Run>
                <LineBreak />
            </TextBlock >
            <ComboBox x:Name="ChoiceLevel" Height="30" Width="400"  VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock>Advanced</TextBlock>
                <TextBlock>Intermediate</TextBlock>
                <TextBlock>Elementary</TextBlock>
            </ComboBox>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontStyle="Italic" FontFamily="Times New Roman">
                <Run FontSize="20" FontWeight="Bold" Foreground="Black" > Choice Intensity </Run>
                <LineBreak />
            </TextBlock >
            <ComboBox x:Name="ChoiceIntensity" Height="30" Width="400"  VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock>Intensive</TextBlock>
                <TextBlock>Regular</TextBlock>
                <TextBlock>Supportive</TextBlock>
            </ComboBox>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontStyle="Italic" FontFamily="Times New Roman">
                <Run FontSize="20" FontWeight="Bold" Foreground="Black" > Choice Type </Run>
                <LineBreak />
            </TextBlock >
            <ComboBox x:Name="ChoiceType" Height="30" Width="400"  VerticalAlignment="Top" HorizontalAlignment="Center" Margin="196,0">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FF783737" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
                <TextBlock><Run Text="Individual"/></TextBlock>
                <TextBlock><Run Text="Group"/></TextBlock>
            </ComboBox>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontStyle="Italic" FontFamily="Times New Roman">
                <Run FontSize="20" FontWeight="Bold" Foreground="Black" > Choice Time </Run>
                <LineBreak />
            </TextBlock >
            <ComboBox x:Name="ChoiceTime" Height="30" Width="400"  VerticalAlignment="Top" HorizontalAlignment="Center" Margin="196,0">
                <TextBlock><Run Text="3 months"/></TextBlock>
                <TextBlock><Run Text="5 months"/></TextBlock>
                <TextBlock><Run Text="7 months"/></TextBlock>
                <TextBlock><Run Text="9 months"/></TextBlock>
                <TextBlock><Run Text="12 months"/></TextBlock>
                
            </ComboBox>
            <StackPanel Height="123" Margin="0,0,10,0" RenderTransformOrigin="0.496,0.489" >
                <Button Content="See result" Height="30" Click="ButtonClickInfo" Margin="257,10,297,10" RenderTransformOrigin="0.5,0.5" Background="#FF1A3674"  >
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.275"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <Button Content="Add new person" Height="30" Click="ButtonClickAdd" Margin="0,27,293,10" HorizontalAlignment="Right" Width="228" RenderTransformOrigin="0.496,-3.721" Background="#FF1A3674"   />
            </StackPanel>
        </StackPanel>
        <Button Click="ButtonRulesClick" HorizontalAlignment="Left" FontSize="30" Height="60" Width="60">
            <StackPanel>
                <Image Source="menu.png" />
                <TextBlock Text="Menu" />
            </StackPanel>
        </Button>

    </Grid>
</Window>
